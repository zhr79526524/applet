page{
	color: #666;
}
.container{
	position: relative;
}
MyHeader{
	position: fixed;
	top: 0;
	z-index: 5;
}
/* 导航栏处理 */
.nav{
	margin-top: 10rpx;
}
scroll-view{
	position: fixed;
	top: 80rpx;
	z-index: 5;
	background-color: white;
}
.nav_scr{
	/* 样式不换行处理 */
	white-space: nowrap;
}
.nav_item{
	font-size: 30rpx;
	padding: 20rpx 45rpx;
	display: inline-block;
}
.nav_item.active{
	border-bottom: 5rpx solid #de688b;
}
/* 轮播图处理 */
.banner{
	margin-top: 10rpx;
	padding-top: 165rpx;
}
.banner swiper{
	height: 220rpx;
}
.banner navigator{
	width: 100%;
	height: 100%;
}
.banner image{
	width: 100%;
	height: 100%;
}
/* 列表标签 */
.video{
	display: flex;
	flex-wrap: wrap;
	padding: 15rpx;
	justify-content: space-between;
}
.video_item{
	width: 48%;
	margin-right: 1%;
	margin-bottom: 20rpx;
}
.video_img{
	position: relative;
}
.video_imgsrc{
	width: 100%;
	height: 50rpx;
	border-radius: 25rpx;
	margin: 3rpx;
}
.video_info{
	position: absolute;
	width: 100%;
	top: 78%;
	display: inline-block;
	text-align: center;
	color: white;
	font-weight: 500;
	font-size: 24rpx;
	padding-left: 15%;
}
.video_play{
	float: left;
	width: 50%;
}
.play_png{
	width: 32rpx;
	height: 32rpx;
	float: left;
	margin-top: 3rpx;
}
.play_num{
	float: left;
	margin-left: 10rpx;
}
.count_num{
	float: left;
	margin-left: 10rpx;	
}
.video_title{
	font-size: 26rpx;
	width: 100%;
	overflow : hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
